<html>
<head>
<% include partials/header.ejs %>
<script src="angularjs/index.js"></script>
  <script src="angularjs/session.js"></script>
  <script src="angularjs/login.js"></script>
  <script src="angularjs/mainController.js"></script>
<script src="angularJS/about.js"></script>
<script src="angularjs/header.js"></script>

</head>
<body ng-app="mainApp" ng-controller="aboutController">
<% include partials/top-bar.ejs %>

<br>
<br>
<div class="container">
  <div class="row">
    <div class="col-md-3 jumbotron" style="height:100%">
      <h3> My Profile </h3>
    </div>
    <div class="col-md-8 jumbotron" style="background-color:#FFFFFF">
      <div class="form-group">
    <form action="updateProfile" method="POST">
      Email:
      <input type="text" name="email" class="form-control" ng-model="aEmail" readonly><br>
      First Name:
      <input type="text" name="firstName" class="form-control" ng-model="afirstName"><br>
      Last Name:
      <input type="text" name="lastName" class="form-control" ng-model="alastName"><br>
      Ebay Handle:
      <input type="text" name="handle" class="form-control" ng-model="ahandle"><br>
      Birthday:
      <input type="date" name="birthday" class="form-control" ng-model="abday"><br>
      Contact Info
      <input type="text" name="contactinfo" class="form-control" ng-model="acontact"><br>
      Location
      <input type="text" name="Location" class="form-control" ng-model="alocation"><br>

      <button type="button" class="btn btn-primary btn-block" ng-click="updateAbout()">Update</button>

      </form>
      </div>







    </div>
  </div>
</div>	



</body>
</html>